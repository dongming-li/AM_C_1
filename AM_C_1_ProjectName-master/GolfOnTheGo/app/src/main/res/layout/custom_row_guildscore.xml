<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="5dp"
    android:background="@drawable/backbox"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtGuildScoreCourse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="TextView"
        android:textSize="18sp" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/txtGuildScoreCourse">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtGuildScoreUser1"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:padding="3dip"
                android:text=""
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtGuildScore1"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:padding="3dip"
                android:text=""
                android:textSize="16sp" />
        </TableRow>

        <View
            android:layout_width="300dp"
            android:layout_height="2dip"
            android:background="#FF909090" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtGuildScoreUser2"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:padding="3dip"
                android:text=""
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtGuildScore2"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:padding="3dip"
                android:text=""
                android:textSize="16sp" />
        </TableRow>

        <View
            android:layout_width="300dp"
            android:layout_height="2dip"
            android:background="#FF909090" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtGuildScoreUser3"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:padding="3dip"
                android:text=""
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtGuildScore3"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:padding="3dip"
                android:text=""
                android:textSize="16sp" />
        </TableRow>

        <View
            android:layout_width="300dp"
            android:layout_height="2dip"
            android:background="#FF909090" />

    </TableLayout>
</RelativeLayout>